<nav class="breadcrumb is-small" aria-label="breadcrumbs">
    <ul>
        <li>
            <a href="/">Página Inicial</a>
        </li>
        <li class="is-active">
            <a href="#" aria-current="page">Cadastrar {{pessoa}}</a>
        </li>
    </ul>
</nav>

<div class="level">
    <div class="level-left">
        <div class="level-item">
            <h1 class="title">
                Cadastrar {{pessoa}}
            </h1>
        </div>
    </div>
</div>

<form method="POST" action="/cadastrar_{{{pessoa}}}">
    <div class="columns is-multiline">
        <div class="column is-9">
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">
                        CPF
                        <span class="has-text-danger">*</span>
                    </label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control is-expanded has-icons-left">
                            <input class="input" type="text" placeholder="CPF">
                            <span class="icon is-small is-left">
                                <i class="fa fa-address-card"></i>
                            </span>
                        </p>
                    </div>
                </div>
            </div>

            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">
                        RG
                        <span class="has-text-danger">*</span>
                    </label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control is-expanded has-icons-left">
                            <input class="input" type="text" placeholder="RG">
                            <span class="icon is-small is-left">
                                <i class="fa fa-address-card"></i>
                            </span>
                        </p>
                    </div>
                </div>
            </div>

            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">
                        Nome Completo
                        <span class="has-text-danger">*</span>
                    </label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control is-expanded has-icons-left">
                            <input class="input" type="text" placeholder="Primeiro Nome">
                            <span class="icon is-small is-left">
                                <i class="fa fa-user"></i>
                            </span>
                        </p>
                    </div>

                    <div class="field">
                        <p class="control is-expanded">
                            <input class="input" type="text" placeholder="Sobrenome">
                        </p>
                    </div>
                </div>
            </div>

            <div class="field is-grouped">
                <div class="field-label">
                    <label class="label">
                        Sexo
                        <span class="has-text-danger">*</span>
                    </label>
                </div>
                <div class="field-body">
                    <div class="field is-narrow">
                        <div class="control">
                            <label class="radio">
                                <input type="radio" name="member"> Feminino
                            </label>
                            <label class="radio">
                                <input type="radio" name="member"> Masculino
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">
                        Data de Nascimento
                        <span class="has-text-danger">*</span>
                    </label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control is-expanded has-icons-left">
                            <input class="input" type="text" placeholder="Data de Nascimento">
                            <span class="icon is-small is-left">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </p>
                    </div>
                </div>
            </div>

            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">
                        Email
                    </label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control is-expanded has-icons-left">
                            <input class="input" type="text" placeholder="Email">
                            <span class="icon is-small is-left">
                                <i class="fa fa-at"></i>
                            </span>
                        </p>
                    </div>
                </div>
            </div>

            <div class="field is-horizontal">
                <div class="field-label"></div>
                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            <button class="button is-primary">
                                Cadastrar
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="field is-horizontal">
                <div class="field-label" />
                <p class="help is-danger is-right">
                    Campos com * são obrigatórios.
                </p>
            </div>

        </div>
    </div>
</form>