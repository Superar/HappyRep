<div class="level">
    <div class="level-left">
        <div class="level-item">
            <h1 class="title">
                Lista de ingredientes
            </h1>
        </div>
    </div>
</div>

<table class="table is-fullwidth is-striped is-hoverable">
    <thead>
        <tr>
            <th>Id servico</th>
            <th>Id produto</th>
            <th>Nome</th>
            <th>Marca</th>
            <th>Descrição</th>
            <th>Categoria</th>
            <th>Nome Receita</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Id servico</th>
            <th>Id produto</th>
            <th>Nome</th>
            <th>Marca</th>
            <th>Descrição</th>
            <th>Categoria</th>
            <th>Nome Receita</th>
        </tr>
    </tfoot>
    <tbody>
        {{#each ingredientes}}
        <tr>
           <th>{{id_receita}}</th>
           <td>{{id_produto}}</td>
           <td>{{nome}}</td>
           <td>{{marca}}</td>
           <td>{{descricao}}</td>
           <td>{{categoria}}</td>
           <td>{{nome_receita}}</td>
        </tr>
        {{/each}}
</table>
