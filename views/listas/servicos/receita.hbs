    <thead>
        <tr>
            <th>Id receita</th>
            <th>Nome</th>
            <th>Descrição</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Id receita</th>
            <th>Nome</th>
            <th>Descrição</th>
        </tr>
    </tfoot>
